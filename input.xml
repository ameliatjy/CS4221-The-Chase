<Chase>
        <ChaseForEntailment>
                <Relation r="ABCD" />
                <FD l="A" r="B" />
                <MVD l="B" r="C" />
                <ChaseFD l="A" r="C" />
        </ChaseForEntailment>

        <ChaseForLosslessDecomposition>
                <Fragment r="AB" />
                <Fragment r="BC" />
        </ChaseForLosslessDecomposition>

        <ChaseForMVD>
                <Relation r="ABCD" />
                <FD l="A" r="B" />
                <MVD l="B" r="C" />
                <ChaseMVD l="A" r="C" />
        </ChaseForMVD>
</Chase>

<!-- Based on the formats above, we have a DTD like the one below, this can either be in this file or can be included by our program -->

<!DOCTYPE Chase [
        <!ELEMENT Chase (ChaseForEntailment?, ChaseForLosslessDecomposition?, ChaseForMVD?)>

        <!-- If we want to chase more than one FD at a time we can do ChaseFD+ -->
        <!ELEMENT ChaseForEntailment (Relation, FD+, MVD+, ChaseFD)>

        <!ELEMENT Relation EMPTY>
                <!ATTLIST Relation
                        r CDATA #REQUIRED
                >

        <!-- ... continue the Data Type Definition ... -->

]>
