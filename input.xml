<!-- This file outlines how our XML will be formatted -->


<!-- Updated input XML format based on the discussion on 17 Mar 2022 -->
<?xml version="1.0" encoding="UTF-8"?>
<chase>
  <entailment>
    <relation>
      <attribute>A</attribute>
      <attribute>B</attribute>
      <attribute>C</attribute>
      <attribute>D</attribute>
    </relation>
    <dependency>
      <lhs>
        <attribute>A</attribute>
      </lhs>
      <rhs>
        <attribute>B</attribute>
      <attribute>C</attribute>
      </rhs>
      <type>multivalued</type>
    </dependency>
    <dependency>
      <lhs>
        <attribute>D</attribute>
      </lhs>
      <rhs>
        <attribute>C</attribute>
      </rhs>
      <type>functional</type>
    </dependency>
    <dependency_to_be_chased>
      <lhs>
        <attribute>A</attribute>
      </lhs>
      <rhs>
        <attribute>C</attribute>
      </rhs>
      <type>functional</type>
    </dependency_to_be_chased>
  </entailment>

  <loseless_decomposition>
    <relation>
      <attribute>A</attribute>
      <attribute>B</attribute>
      <attribute>C</attribute>
      <attribute>D</attribute>
    </relation>
    <fragment>
      <attribute>A</attribute>
      <attribute>B</attribute>
    </fragment>
    <fragment>
      <attribute>C</attribute>
      <attribute>D</attribute>
    </fragment>
    <dependency>
      <lhs>
        <attribute>A</attribute>
      </lhs>
      <rhs>
        <attribute>B</attribute>
      <attribute>C</attribute>
      </rhs>
      <type>multivalued</type>
    </dependency>
    <dependency>
      <lhs>
        <attribute>D</attribute>
      </lhs>
      <rhs>
        <attribute>C</attribute>
      </rhs>
      <type>functional</type>
    </dependency>
  </loseless_decomposition>
</chase>


